@model CUATRG.ViewModels.AlbumIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home")</li>
          <li class="active"><a href="#">Albums</a></li>
        
        </ol>

    <h2>Albums</h2>
    <div class="row">
        @foreach (CUATRG.Models.tblAlbum album in Model.Albums)
        {
            var link = System.Configuration.ConfigurationManager.AppSettings["domain"] + "Images/default.png";
            
            if (@album.tblImages != null && @album.tblImages.Count() > 0)
            {
                link = System.Configuration.ConfigurationManager.AppSettings["domain"] + @album.tblImages.First().IMG_Path + "//" + album.tblImages.First().IMG_Name;
            }
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@link">
                    <div class="caption">
                        <h3 class="padd-left">@album.ALB_Name</h3>
                        <p>@album.ALB_Description</p>
                        <p>
                            <a href="@Url.Action("Details", "Album",new { albumId = Html.Encode(album.ALB_IDPkey) })" class="btn btn-primary" role="button">View</a>
                            <a href="#" class="btn btn-default" role="button">Button</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
