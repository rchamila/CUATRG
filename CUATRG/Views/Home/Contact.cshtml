@{
    ViewBag.Title = "Contact";
}


<div class="container well">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="active"><a href="#">Contact Us</a></li>

    </ol>
    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { id = "calcForm", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="container">
            <h1>Contact Us</h1>
            <br />

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10">
                        <div class="h4 ">@ViewBag.Message</div>
                    </div> 
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-4">
                        <div class="h4 ">Name</div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <input type="text" class="form-control" name="name"></input>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="h4 ">Email</div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <input type="text" class="form-control" name="email"></input>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="h4 ">Description</div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <textarea type="text" class="form-control" name="message" aria-multiline="true" style="height:100px"></textarea>
                        </div>

                    </div>
                </div>

            </div>

        </div>
        <br />
        <br />
        <div class="col-md-6 col-sm-offset-2">
            <div class="col-md-3">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-lg btn-default btn-block">Clear</button>
            </div>
        </div>
    }
</div>
